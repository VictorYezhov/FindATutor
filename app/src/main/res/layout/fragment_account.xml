<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fatproject.fragments.AboutUs">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:text="Vitia"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_alignEnd="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Student of UCU"
        android:layout_alignEnd="@+id/profile_name"
        android:layout_alignStart="@+id/profile_name" />

    <ImageButton
        android:id="@+id/plusButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:padding="60dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/profile_name"
        android:layout_alignEnd="@+id/profile_image"
        android:src="@drawable/plus_button" />

    <ImageButton
        android:id="@+id/chatButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:padding="47dp"
        android:rotation="180"
        android:background="@android:color/transparent"
        android:src="@drawable/chat_button"
        android:layout_alignTop="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image" />
    </RelativeLayout>

</FrameLayout>