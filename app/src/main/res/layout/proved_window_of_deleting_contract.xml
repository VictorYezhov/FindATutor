<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/areYouSureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Are you sure?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/canselButtonInContractDeletingWindow"
        app:layout_constraintStart_toStartOf="@+id/yesButtonInContractDeletingWindow"
        app:layout_constraintTop_toTopOf="parent" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/yesButtonInContractDeletingWindow"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="YES"
        app:bootstrapBrand="success"
        app:bootstrapSize="sm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areYouSureText"
        app:layout_constraintVertical_bias="0.0"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/canselButtonInContractDeletingWindow"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="8dp"
        android:text="CANCEL"
        app:bootstrapBrand="danger"
        app:bootstrapSize="sm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areYouSureText"
        app:layout_constraintVertical_bias="0.0"
        app:roundedCorners="true"
        app:showOutline="false" />

</android.support.constraint.ConstraintLayout>