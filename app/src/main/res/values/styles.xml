<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/blue</item>
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>
        <item name="colorButtonNormal">@color/dark_grey</item>

    </style>

    <style name="AppTheme.PreferenceTheme" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/very_dark_blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionModeOverlay">false</item>


    </style>

   <style name="AppTheme.AskTheme">
       <item name="colorPrimary">@color/grey</item>
       <item name="colorPrimaryDark">@color/accent</item>
       <item name="colorAccent">@color/accent</item>
       <item name="android:background">@color/accent</item>
       <item name="android:windowBackground">@color/accent</item>
   </style>


    <!-- Base application theme. -->
    <style name="AppThemeMy" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/AppTheme.Dark</item>
        <item name="android:preferenceCategoryStyle">@color/black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/very_dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:listDivider">@drawable/divider_items_decoration</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/blue</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeContacts" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/grey</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Floating label text style-->
    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

</resources>
